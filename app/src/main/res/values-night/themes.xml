<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.RestauranteVerde" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/verde_principal</item>
        <item name="colorPrimaryVariant">@color/verde_oscuro</item>
        <item name="colorOnPrimary">@color/blanco</item>
        <item name="colorSecondary">@color/verde_secundario</item>
        <item name="colorOnSecondary">@color/blanco</item>
        <item name="android:statusBarColor">@color/verde_oscuro</item>
        <item name="android:navigationBarColor">@color/verde_oscuro</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="materialButtonStyle">@style/Widget.RestauranteVerde.Button</item>
    </style>

    <style name="Widget.RestauranteVerde.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/verde_secundario</item>
        <item name="android:textColor">@color/blanco</item>
        <item name="cornerRadius">18dp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
    </style>
</resources>
